@using Kigg
@using Kigg.DomainObjects
@using Kigg.Web
@model Kigg.Web.UserListViewData

@{
    Page.Header.Title = Model.Title;
}

@Html.PageHeader(Model.Subtitle)
@if (!Model.Users.IsNullOrEmpty())
{
    <div id="userList">
        <table>
            <thead>
                <tr>
                    <th style="width: 200px">Użytkownik</th>
                    <th style="width: 355px">Ostatnio widziany</th>
                    <th>Punkty</th>
                </tr>
            </thead>
            <tbody>
                @foreach (IUser user in Model.Users)
                {
                    <tr>
                        <td>
                            @{ string userName = user.UserName; }
                            <a href="@Url.RouteUrl("User", new { name = user.Id.Shrink(), tab = UserDetailTab.Promoted, page = 1 })">
                                <img alt="@Html.AttributeEncode(userName)" src="@Html.AttributeEncode(user.GravatarUrl(32))" class="smoothImage" onload="javascript: SmoothImage.show(this);" />
                                @userName
                            </a>
                        </td>
                        <td>
                            @user.LastActivityAt.ToRelative() temu
                        </td>
                        <td style="text-align:right">
                            @(user.IsPublicUser() ? user.CurrentScore.ToString(FormatStrings.UserScore) : "brak danych")
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3">Liczba użytkowników: @Model.TotalUserCount</th>
                </tr>
            </tfoot>
        </table>
    </div>
    @Html.Pager("Users", null, null, ViewContext.RouteData.Values, "page", false, Model.PageCount, 5, 2, Model.CurrentPage)
}
else
{
    <span class="pageMessage">@Model.NoUserExistMessage</span>
}